[color]
  ui = auto
[color "status"]
  changed = blue
  added = blue
  untracked = magenta
[core]
  editor = vim
[push]
  default = matching
[alias]
  listall = ls-tree --full-tree -r HEAD
  br = branch
  st = status
  ti = tag -a
  ci = commit --verbose
  co = checkout
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  ff = pull --ff-only
  b = branch
  ds = diff --stat=160,120
  l = "!. ~/.githelpers && pretty_git_log"
  lcom = "!. ~/.githelpers && commit_only"
  la = !git l --all
  cf = clean -f
  cp = cherry-pick
  count = shortlog -sn
  uncommit = reset --soft HEAD~1
  re = reset HEAD
  rehard = reset HEAD --hard
  total = rev-list --all --count
  ra = \
    log --abbrev-commit \
    --pretty=format:'%C(yellow)%h%C(red)%d %Cgreen(%cr) %C(bold cyan)<%an>%Creset %s'
