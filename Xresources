! Create the window with the specified X window geometry [default
XTerm*geometry: 160x50
XTerm*termName: xterm-256color

! Disable alternate screen
XTerm*titeInhibit: true

! True: specify that jump scrolling should be used. When receiving
! allow multiple lines per refresh
URxvt*jumpScroll: True
URxvt*skipScroll: True

Xft.dpi: 60
XTerm*renderFont: True
xterm*faceName: xft:inconsolata:size=20
xURxvt.letterSpace: -1
! Set window title string, the default title is the command-line
URxvt*title: mikepjb
! True: enable the scrollbar [default]; option -sb. False: disable
URxvt*scrollBar: false
! Specifies number of lines (pixel height) to insert between each row
URxvt*lineSpace: 0
! Set the key to be interpreted as the Meta key to: alt, meta, hyper,
XTerm*eightBitInput:   false
XTerm*eightBitOutput:  true
XTerm*metaSendsEscape: True

! Fix for Ctrl+h calling backspace

xterm.*backarrowKey: false
*ttyModes:         erase ^?
*VT100.Translations: \
        #override <Key>BackSpace: string(0x7f) \n\
                  <Key>Delete:    string(0x1b) string("[3~")

! Includes copy paste

xterm*VT100.Translations: #override \
                Ctrl Shift <Key>V:    insert-selection(CLIPBOARD) \n\
                Ctrl Shift <Key>C:    copy-selection(CLIPBOARD)

*xterm*background: #1b1d1e
*xterm*foreground: #f8f8f2
*xterm*cursorColor: #f8f8f2

! Black/grey
*xterm*color0: #1b1d1e
*xterm*color8: #7c7c7c

! Red
*xterm*color1: #f7cedc
*xterm*color9: #fcedf4

! Green
*xterm*color2: #ddf8ae
*xterm*color10: #e7f6dd

! Yellow
*xterm*color3: #f3ecb2
*xterm*color11: #f9f7df

! Blue
*xterm*color4: #d1f0f6
*xterm*color12: #d5ebf0

! Magenta
*xterm*color5: #f2c3ea
*xterm*color13: #e0d4f3

! Cyan
*xterm*color6: #b1f3f7
*xterm*color14: #cff3f3

! White
*xterm*color7: #f8f8f2
*xterm*color15: #f8f8f2

