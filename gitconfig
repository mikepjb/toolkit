[user]
	name = Michael Bruce
	email = me@michaelbruce.co
[color]
  ui = auto
[color "status"]
  changed = blue
  added = blue
  untracked = green
[core]
  editor = vim
[push]
  default = matching
[alias]
  listall = ls-tree --full-tree -r HEAD
  br = branch
  st = status
  ti = tag -a
  ci = commit --verbose
  co = checkout
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  ff = pull --ff-only
  ffa = pull --ff-only --all
  b = branch
  ds = diff --stat=160,120
  l = "!. ~/.githelpers && pretty_git_log"
  lcom = "!. ~/.githelpers && commit_only"
  la = !git l --all
  cf = clean -f
  cp = cherry-pick
  count = shortlog -sn
  uncommit = reset --soft HEAD~1
  remerge = checkout -m # during a merge, start from conflict again for a file.
  re = reset HEAD
  rehard = reset HEAD --hard
  total = rev-list --all --count
  recent = diff --name-only HEAD
  ra = \
    log --abbrev-commit \
    --pretty=format:'%<(7)%C(yellow)%h %Cgreen%<(15)"(%cr)" %C(bold cyan)%<(17)<%an>%C(red)%d %Creset %s'
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[credential]
  helper = cache --timeout=3600
[merge]
  tool = vimdiff
  conflictstyle = diff3
[mergetool]
  prompt = false
  path = nvim
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[diff "gpg"]
  textconv = gpg -qd --no-tty
[filter "lfs"]
  clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
  required = true
